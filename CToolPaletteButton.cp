// CToolPaletteButton.cp#include "CToolPaletteButton.h"CToolPaletteButton::CToolPaletteButton(LStream *inStream)	: LCicnButton(inStream)  {		mNormalH = ::GetCIcon(mNormalID);	mPushedH = ::GetCIcon(mPushedID);}void CToolPaletteButton::DrawSelf(){	Rect	frame;	CalcLocalFrameRect(frame);	::PenNormal();			if (mValue == Button_Off) {		mNormalCicnH = mNormalH;	} else 	if (mValue == Button_On) {		mNormalCicnH = mPushedH;	}	if (mNormalCicnH != nil) {		::PlotCIcon(&frame, mNormalCicnH);	}}void CToolPaletteButton::HotSpotResult(SInt16 inHotSpot){	SetValue(Button_On);}void CToolPaletteButton::SetValue(SInt32 inValue){	if (inValue != mValue) {		LControl::SetValue(inValue);		if (mValue == Button_On) {			BroadcastMessage(msg_ControlClicked, (void*) this);		}		Refresh();	}}